@model Dictionary<int, string>
@{
    ViewBag.Title = "Reservation Summary";
}

<div class="jumbotron handyman-jumbotron">
    <h2><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> @ViewBag.Title</h2>
</div>
    <h3>Tools Desired</h3>
<form action="@Url.Action("Confirmation")" method="post">
    @*<input type="hidden" name="customerId" value="@User.Identity.GetUser().UserName" />*@
    <ol>
        @foreach (var tool in Model)
        {
            <li>@tool.Value<input type="hidden" name="toolKey@(tool.Key)" value="@tool.Key" /><input type="hidden" name="toolName@(tool.Key)" value="@tool.Value" /></li>
        }
    </ol>
    <p><b>Start Date</b> @ViewBag.StartDate</p><input type="hidden" name="startDate" value="@ViewBag.StartDate" />
    <p><b>End Date</b> @ViewBag.EndDate</p><input type="hidden" name="endDate" value="@ViewBag.EndDate" />
    <p><b>Total Rental Price</b> @string.Format("{0:C}", @ViewBag.TotalRental)<input type="hidden" name="totalRental" value="@ViewBag.TotalRental" /></p>
    <p><b>Total Deposit Required</b> @string.Format("{0:C}", @ViewBag.totalDeposit)<input type="hidden" name="totalDeposit" value="@ViewBag.TotalDeposit" /></p>
<input type="submit" value="Submit"/> <input type="reset" onclick="javascript: window.location('@Url.Action("Make")');"/>
</form>


