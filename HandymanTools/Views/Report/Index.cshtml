
@model HandymanTools.Models.ReportViewModel

<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#inventory">Inventory</a></li>
        <li><a data-toggle="tab" href="#customerRental">Customer Rental</a></li>
        <li><a data-toggle="tab" href="#clerkProgress">Clerk Progress</a></li>
    </ul>
    <div class="tab-content">
        <div id="inventory" class="tab-pane fade in active">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tool ID</th>
                        <th>Abbr. Description</th>
                        <th>Rental Profit</th>
                        <th>Cost of Repairs</th>
                        <th>Total Profit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var m in Model.Inventory)
                    {
                        <tr>
                            <td>@m.Tool.ToolId</td>
                            <td>@m.Tool.AbbrDescription</td>
                            <td>@string.Format("{0:C}", m.RentalProfit)</td>
                            <td>@string.Format("{0:C}", m.CostOfRepairs)</td>
                            <td>@string.Format("{0:C}", m.TotalProfit)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="customerRental" class="tab-pane fade">
            <table class="table">
                <thead>
                    <tr>
                        <th>Customer Name</th>
                        <th>Email Address</th>
                        <th>Number of Rentals</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
        <div id="clerkProgress" class="tab-pane fade">
            <table class="table">
                <thead>
                    <tr>
                        <th>Clerk Name</th>
                        <th>Number of Pickups</th>
                        <th>Number of Dropoffs</th>
                        <th>Total Pickups/Dropoffs</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>
