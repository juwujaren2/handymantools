@model HandymanTools.Models.ToolSellViewModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="jumbotron handyman-jumbotron">
        <h2><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span> Sell tool</h2>
    </div>
    <br />
    if (string.IsNullOrEmpty(Model.ToolName))
    {
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input-group">
                <input type="text" class="form-control accessory-control text-box single-line" id="ToolId" name="ToolId" placeholder="Enter Id for tool you want to sell...">
                <span class="input-group-btn" style="width: auto;">
                    <button class="btn btn-primary" type="submit">Go!</button>
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.ToolId, "", new { @class = "text-danger" })
        </div>
    }
    else
    {
        @Html.Partial("SellDetails")
    }
}

